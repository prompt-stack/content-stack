{
  "name": "content-stack-components",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "backend": "tsx backend/server.ts",
    "backend:dev": "tsx watch backend/server.ts",
    "backend:build": "tsc backend/server.ts --outDir dist/backend --target es2020 --module commonjs --esModuleInterop",
    "dev:all": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "dev:new": "concurrently \"npm run dev\" \"npm run backend:dev\"",
    "audit:component": "./design-system/scripts/audit-component.sh",
    "audit:system": "./design-system/scripts/css-audit.sh",
    "audit:quick": "./design-system/scripts/audit-component.sh",
    "audit:full": "./design-system/scripts/css-audit.sh",
    "audit:naming": "./design-system/scripts/audit-naming.sh",
    "audit:backend": "./design-system/scripts/audit-backend-naming.sh",
    "audit:all": "npm run audit:naming && npm run audit:backend",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "generate:test": "./grammar-ops/scripts/generate-test.sh",
    "storage:integrity": "node scripts/storage/integrity-check.js",
    "storage:cleanup": "node scripts/storage/cleanup-storage.js",
    "storage:fix-sizes": "node scripts/storage/fix-metadata-sizes.js",
    "metadata:add-category": "node scripts/metadata/add-category-field.js",
    "metadata:add-text": "node scripts/metadata/add-text-field.js",
    "metadata:optimize": "node scripts/metadata/optimize-for-llm.js",
    "metadata:validate": "node scripts/metadata/validate-metadata.js",
    "metadata:fix": "node scripts/metadata/audit-and-fix-metadata.js",
    "audit:tests": "./grammar-ops/scripts/audit-tests.sh",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm test && npm run test:e2e"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.83.0",
    "@types/react-window": "^1.8.8",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "json2csv": "^6.0.0-alpha.2",
    "lucide-react": "^0.525.0",
    "multer": "^2.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.7.0",
    "react-window": "^1.8.11",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.5",
    "@eslint/js": "^9.30.1",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^4.6.0",
    "archiver": "^7.0.1",
    "concurrently": "^9.2.0",
    "cypress": "^14.5.2",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
