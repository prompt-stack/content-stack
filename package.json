{
  "name": "content-stack-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "backend": "tsx backend/server.ts",
    "backend:dev": "tsx watch backend/server.ts",
    "backend:build": "tsc backend/server.ts --outDir dist/backend --target es2020 --module commonjs --esModuleInterop",
    "dev:all": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "dev:new": "concurrently \"npm run dev\" \"npm run backend:dev\"",
    "audit:component": "./design-system/scripts/audit-component.sh",
    "audit:system": "./design-system/scripts/css-audit.sh",
    "audit:quick": "./design-system/scripts/audit-component.sh",
    "audit:full": "./design-system/scripts/css-audit.sh",
    "audit:naming": "./design-system/scripts/audit-naming.sh",
    "audit:backend": "./design-system/scripts/audit-backend-naming.sh",
    "audit:all": "npm run audit:naming && npm run audit:backend"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.83.0",
    "@types/react-window": "^1.8.8",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "json2csv": "^6.0.0-alpha.2",
    "multer": "^2.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.7.0",
    "react-window": "^1.8.11",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.6.0",
    "archiver": "^7.0.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
